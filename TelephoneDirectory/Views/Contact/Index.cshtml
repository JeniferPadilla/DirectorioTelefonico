@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contact Phone";
}

<h1>CONTACT LIST</h1><br />

<form class="row g-3" asp-action="index">
 
    <div class="form-group col-md-2">
    <label class="control-label">Buscar Contacto:</label>
  </div>
  <div class="col-auto">
    <label  class="visually-hidden">Nombre</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nameContact" value="@ViewBag.nameContact">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Buscar</button>
  </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Create Contact</a>


<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Tel</th>
            <th>Cel</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var contact in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@contact.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@contact.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
                <td>
                    @contact.Name
                </td>
                <td>
                    @contact.Tel
                </td>
                <td>
                    @contact.Cel
                </td>
                

            </tr>
        }
    </tbody>
</table>